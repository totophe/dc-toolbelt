{
  "name": "Node 24 Toolbelt (aws)",
  "image": "ghcr.io/totophe/dc-toolbelt:node24-aws",
  "remoteUser": "node",
  "mounts": [
    "source=dc-toolbelt-gh-config,target=/home/node/.config/gh,type=volume",
    "source=dc-toolbelt-aws-config,target=/home/node/.aws,type=volume",
    "source=dc-toolbelt-claude-config,target=/home/node/.claude,type=volume"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "editor.formatOnSave": true,
        "editor.inlineSuggest.enabled": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      },
      "extensions": [
        "amazonwebservices.aws-toolkit-vscode",
        "github.copilot",
        "github.copilot-chat",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "postStartCommand": "sudo chown -R node:node /home/node/.config /home/node/.claude || true && aws --version && claude --version"
}
